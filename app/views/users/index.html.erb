<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>

      <td><%= link_to user.name, user, class: "show" %></td>
      <% if user_signed_in? && !Invitation.reacted(current_user.id, user.id) && current_user != user %>
      <td> <%= link_to 'Send Invitation',
            invitations_path(user: current_user.id, friend: user.id), method: 'post'
          %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>